        .container
          .row
            .col-sm-4
              img(src='imgs/jo.svg')
              h4.text-center Patron 2: Jo
            .col-sm-8
              .col-sm-12.bhoechie-tab-container
                .col-lg-4.col-md-4.col-sm-4.col-xs-4.bhoechie-tab-menu
                  .list-group
                    a.list-group-item.active.text-center(href='#')
                      h4 About
                    a.list-group-item.text-center(href='#')
